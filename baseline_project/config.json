{
  "project_name": "Veille Automatique NLP",
  "description": "Système de collecte, analyse et synthèse d'articles techniques",
  
  "collection": {
    "hacker_news": {
      "enabled": true,
      "url": "https://news.ycombinator.com/",
      "num_pages": 7,
      "timeout": 10,
      "delay_between_requests": 2,
      "fetch_content": true
    },
    "pycoders_rss": {
      "enabled": false,
      "url": "https://pycoders.com/feed",
      "timeout": 10
    },
    "towards_data_science": {
      "enabled": true,
      "url": "https://towardsdatascience.com/latest",
      "num_pages": 5,
      "timeout": 15,
      "delay_between_requests": 2,
      "fetch_content": true
    },
    "youtube": {
      "enabled": false,
      "api_key": "",
      "queries": ["NLP python tutorial", "BERT fine-tuning", "transformers"],
      "max_results": 5
    }
  },
  
  "preprocessing": {
    "language": "en",
    "spacy_model": "en_core_web_sm",
    "normalize_case": true,
    "remove_urls": true,
    "remove_html": true,
    "remove_accents": false,
    "min_token_length": 2,
    "remove_stopwords": true,
    "lemmatization": true
  },
  
  "classification": {
    "model_type": "zero-shot",
    "model_name": "facebook/bart-large-mnli",
    "default_labels": ["Beginner", "Intermediate", "Advanced"],
    "source_labels": {
      "HackerNews": ["Beginner", "Intermediate", "Advanced"],
      "TowardsDataScience": ["Beginner", "Intermediate", "Advanced"]
    },
    "confidence_threshold": 0.5
  },
  
  "deduplication": {
    "method": "cosine_similarity",
    "vectorizer": "tfidf",
    "threshold": 0.85
  },
  
  "output": {
    "format": "txt",
    "include_visualizations": true,
    "output_dir": "./output",
    "report_name": "veille_report.txt"
  },
  
  "logging": {
    "level": "INFO",
    "log_file": "veille_system.log"
  }
}
